{
  "name": "elixirLS",
  "languageId": "elixir",
  "command": ["language_server.sh"],
  "support-single-file": false,
  "projectFiles": ["mix.exs"],
  "settings": {
    "elixirLS": {
      "dialyzerEnabled": true,
      "dialyzerWarnOpts": [],
      "dialyzerFormat": "dialyxir_short",
      "fetchDeps": true,
      "suggestSpecs": true,
      "signatureAfterComplete": true,
      "enableTestLenses": false
    }
  }
}
