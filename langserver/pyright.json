{
  "name": "pyright",
  "languageId": "python",
  "command": ["pyright-langserver", "--stdio"],
  "settings": {
    "python.analysis": {
      "autoImportCompletions": true,
      "typeshedPaths": [],
      "stubPath": "",
      "useLibraryCodeForTypes": true,
      "diagnosticMode": "openFilesOnly",
      "typeCheckingMode": "basic",
      "logLevel": "verbose",
      "autoSearchPaths": true,
      "extraPaths": []
    },
    "pythonPath": "/usr/bin/python",
    "venvPath": ""
  }
}
