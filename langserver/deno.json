{
  "name": "deno",
  "languageId": "typescript",
  "command": ["deno", "lsp"],
  "settings": {
    "deno": {
      "enable": true,
      "lint": true,
      "unstable": true
    },
    "typescript": {
      "inlayHints": {
        "variableTypes": {
          "enabled": true
        },
        "parameterTypes": {
          "enabled": true
        }
      }
    }
  }
}
